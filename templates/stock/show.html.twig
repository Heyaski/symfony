{% extends 'base.html.twig' %}

{% block title %}{{ stock.name }}{% endblock %}

{% block body %}
<div class="stock-detail-container">
    <div class="stock-card">
        <h1>{{ stock.name }}</h1>
        
        <div class="stock-info">
            <div class="info-group">
                <label>ID:</label>
                <span>{{ stock.id }}</span>
            </div>
            
            <div class="info-group">
                <label>Название:</label>
                <span>{{ stock.name }}</span>
            </div>
            
            <div class="info-group">
                <label>Тикер:</label>
                <span>{{ stock.ticker }}</span>
            </div>
        </div>

        <div class="action-buttons">
            <a href="{{ path('app_stock_glass', {'stockId': stock.id}) }}" class="btn btn-primary">Биржевой стакан</a>
            <a href="{{ path('app_stock_index') }}" class="btn btn-secondary">Назад к списку</a>
            <a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="btn btn-warning">Изменить</a>
            {{ include('stock/_delete_form.html.twig') }}
        </div>
    </div>
</div>

<style>
.stock-detail-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
}

.stock-card {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 2rem;
    color: #fff;
}

.stock-card h1 {
    text-align: center;
    margin-bottom: 2rem;
    color: #fff;
}

.stock-info {
    display: grid;
    gap: 1rem;
    margin-bottom: 2rem;
}

.info-group {
    display: grid;
    grid-template-columns: 120px 1fr;
    align-items: center;
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 5px;
}

.info-group label {
    font-weight: bold;
    color: #bdc3c7;
}

.action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
}

.btn {
    padding: 0.75rem 1.5rem;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
}

.btn-secondary {
    background: #7f8c8d;
    color: white;
}

.btn-warning {
    background: #f1c40f;
    color: #2c3e50;
}

.btn-danger {
    background: #e74c3c;
    color: white;
    border: none;
    cursor: pointer;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}
</style>
{% endblock %}
